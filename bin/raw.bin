#!/bin/bash

#----------------------------------------
# Checks for shared commands, e.g. --help

while [ $# -gt 0 ] ; do
    parm="$1"
    shift

    case "$parm" in
        --help)
        #usage
        echo -e "ayuda!! \n En proceso todavia"
	    echo "jin foto = screenshot;"
	    echo "jin --version = modelo de version;"
	    echo "jin init = instalacion de librerias;"
	    echo "jin server-php = servido	php;"
	    echo "jin server-npm = server npm;"
	    echo "jin actual = actualizacion de packetes;"
	    echo "jin banner = programa de banner;"
	    break
        ;;

        foto)
        gnome-screenshot -d 4
        break
        ;;

        --version)
        echo "raw v1.0.0"
        break
        ;;

        init) #init repo
        curl https://raw.githubusercontent.com/JIN26/install/main/index.sh | bash
        break
        ;;

        server-php) #Servidor local $ipp
        curl https://raw.githubusercontent.com/JIN26/install/main/cmd/server-php.sh | bash
        break
        ;;
	
        server-npm) #servidor nmp 
        npm i -g serve
        google-chrome "http://localhost:8080"
        serve -l 8080 &
        break
        ;;
	
        actual) #Actualizacion de package.sh
        curl https://raw.githubusercontent.com/JIN26/install/main/package/install.pkg | bash
        break
        ;;  

        banner)
        git clone https://github.com/JIN26/Banner.git
	break
	;;
    esac
done
